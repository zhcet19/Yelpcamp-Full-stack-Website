<%- include ('../partials/header') %>
<div class="container">
	<div class="row">
<h1 style="text-align:center">
	 Edit <%= campground.name %>
</h1>
<a href=""></a>
<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
	<div style="width:30%; margin:25px  auto ;">
	<div class="form-group">
	<input  class="form-control"type="text" placeholder="name" name="campground[name]" value="<%= campground.name%>">
	</div>
	<div class="form-group">
	<input  class="form-control"type="number" placeholder="price" name="campground[price]"  value="<%= campground.price%>" min="0.01" step="0.01">
	</div>
	<div class="form-group">
		<input  class="form-control"type="text" placeholder="image url" name="campground[image]" value="<%= campground.image %>">
		</div>
		<div class="form-group">
		<input  class="form-control"type="text" placeholder="description" name="campground[description]" value=" <%= campground.description %>">
		</div>
		<div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
       </div>
	<div class="form-group">
		<button class="btn-lg btn-primary btn-block" >
		Submit
	</button>
		</div>
		<a href="/campground">Go back</a>
	</div>
</form>
</div>
</div>
<%- include ('../partials/footer') %>		
