<%- include ('../partials/header') %>
<div class="container">
	<div class="row">
<h1 style="text-align:center">
	 Create a new Campground
</h1>
<a href=""></a>
<form action="/campground" method="POST">
	<div style="width:30%; margin:25px  auto ;">
	<div class="form-group">
	<input  class="form-control"type="text" placeholder="name" name="name">
	</div>
	<div class="form-group">
	<input  class="form-control"type="number" placeholder="price" name="price" min="0.01" step="0.01">
	</div>	
	<div class="form-group">
		<input  class="form-control"type="text" placeholder="image url" name="image">
		</div>
		<div class="form-group">
		<input  class="form-control"type="text" placeholder="description" name="description">
		</div>
		<div class="form-group">
       <label for="location">Location</label>
      <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
       </div>
	<div class="form-group">
		<button class="btn-lg btn-primary btn-block" >
		Submit
	</button>
		</div>
		<a href="/campground">Go back</a>
	</div>
</form>
</div>
</div>
<%- include ('../partials/footer') %>		
